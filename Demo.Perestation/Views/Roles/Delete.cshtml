@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-5 w-75">Are You Sure Delete Role @Model.Name ? </h1>
<div class="tab-pane fade show active p-4 border">



    <partial name="PartialView\DetalisRole.cshtml" model="Model" />

    <div />
    <div class="mt-4">
        <form method="post" asp-controller="Roles" asp-action="DeleteRole" asp-route-id="@Model.Id">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
        </form>
    </div>
</div>