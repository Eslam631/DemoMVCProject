
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}


<h1 class="my-2">All Roles</h1>



<a class=" btn btn-primary my-3" asp-controller="Roles" asp-action="Create">Create Roles</a>

<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="RolesSearchName" placeholder="Search By Roles Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />

        </div>
    </form>

</div>


@if (Model.Any())
{

    <table class="table table-dark table-hover mt-3">
        <thead class="text-center">
            <tr>

                <th>@Html.DisplayNameFor(E => E.Id)</th>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                

                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody class="text-center">
            @foreach (var Role in Model)
            {
                <tr>

                    <td>@Role.Id</td>
                    <td>@Role.Name</td>
                  

                    @* @Html.RenderPartialAsync("_ButtonPartialView",Employee.Id) *@

                    <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@Role.Id"><i class="fas fa-eye"></i>  Details</a></td>
                    <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@Role.Id"><i class="fas fa-edit"></i> Edit</a></td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Role.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>




                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{

    <h3 class="alert alert-info m-3 border border-5">No Roles Found !! </h3>

}

