@model CreateViewModel
@{
    ViewData["Title"] = "Create";
}



<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Roles</h1>

    <div class="m-2 col-8 ">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group mb-3 col-12">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-4 m-auto">
                <input class="btn btn-primary" type="submit" value="Add Roles" />
                <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
            </div>
        </form>
    </div>
</div>


@section ValidationSide {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}